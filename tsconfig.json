{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["domain/**/*", "server/**/*"],
  "exclude": ["node_modules"]
}